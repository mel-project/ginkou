{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./out",
    "strict": true,
    "target": "es6",
    "lib": ["es2017"],

    "plugins": [
      { "transform": "typescript-is/lib/transform-inline/transformer" }
    ]
  },

  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
