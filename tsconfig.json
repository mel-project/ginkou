{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom", "ES2020.BigInt"],
    "strict": true,

    "moduleResolution": "node",
    "outDir": "./out",
    "importsNotUsedAsValues": "remove",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    // "paths": {"@components": ["components"], "@components/*": ["components/*"]} ,
    "plugins": [
      { "transform": "typescript-is/lib/transform-inline/transformer" }
    ]
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
